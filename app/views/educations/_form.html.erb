<form_tag class="form-horizontal" >

  <%= form_for([@user, @education]) do |f| %>

  <% if @education.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@education.errors.count, "error") %> prohibited this record from being saved:</h2>

      <ul>
        <% @education.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label class="control-label col-sm-2" for="email">Institute Name:</label>
    <div class="col-sm-10">
      <%= f.text_field :institute, class: 'form-control', placeholder: "name of the institute from which you complete your degree" %>
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-2" for="email">Degree:</label>
    <div class="col-sm-10">
      <%= f.text_field :degree, class: 'form-control', placeholder: "eg MBS BSCS BSEE etc" %>
    </div>
  </div>


  <div class="form-group">
    <label class="control-label col-sm-2" for="email">From:</label>
    <div class="col-sm-10">
      <%= f.date_field :from, placeholder: "dd/mm/yyyy" %>
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-2" for="email">To:</label>
    <div class="col-sm-10">
      <%= f.date_field :to, placeholder: "dd/mm/yyyy" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Submit</button>
    </div>
  </div>
</form>
  <% end %>
