<form_tag class="form-horizontal", html: { multipart: true } >

  <%= form_for([@tes]) do |f| %>

  <% if @tes.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@tes.errors.count, "error") %> prohibited this record from being saved:</h2>

      <ul>
        <% @tes.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label class="control-label col-sm-2" for="email">Person Name:</label>
    <div class="col-sm-10">
      <%= f.text_field :persons_name, class: 'form-control', placeholder: "name" %>
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-2" for="email">Company:</label>
    <div class="col-sm-10">
      <%= f.text_field :company, class: 'form-control', placeholder: "company name" %>
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-2" for="email">Person Designation:</label>
    <div class="col-sm-10">
      <%= f.text_field :persons_designantion, class: 'form-control', placeholder: "software engineer, accountant, ceo etc" %>
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-2" for="email">Description:</label>
    <div class="col-sm-10">
      <%= f.text_area :description, placeholder: "testimonial", class: 'form-control', rows: 10 %>
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-2" for="email">Image:</label>
    <div class="col-sm-10">
      <%= f.file_field :pic %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default pull-right">Submit</button>
    </div>
  </div>

  <% end %>

</form>
