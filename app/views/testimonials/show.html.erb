<%- model_class = Testimonial -%>
<div class="page-header">
  <!-- <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1> -->
  <h3>details</h3>
</div>

<div class="row">

  <div class="col-md-6">
    <%= image_tag @tes.pic.url %>
  </div>

  <div class="col-md-6">
    <dl class="dl-horizontal">
      <dt><strong><%= model_class.human_attribute_name(:from) %>:</strong></dt>
      <dd><%= @tes.persons_name %></dd>
      <dt><strong><%= model_class.human_attribute_name(:company) %>:</strong></dt>
      <dd><%= @tes.company %></dd>
      <dt><strong><%= model_class.human_attribute_name(:designation) %>:</strong></dt>
      <dd><%= @tes.persons_designantion %></dd>
      <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
      <dd><%= @tes.description %></dd>
    </dl>


  </div>

</div>

<% if (current_user.id == @user.id ) %>
  <%= link_to 'back',  user_testimonials_path(@user), :class => 'btn btn-link pull-right' %>
  <%= link_to 'Edit',  edit_user_testimonial_path(@user, @tes), :class => 'btn btn-link pull-right'  %>
  <%= link_to 'Destroy', [@user, @tes], method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-link pull-right'  %>
<% end %>
