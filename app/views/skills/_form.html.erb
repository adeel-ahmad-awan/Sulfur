
<%= form_for([@user, @skill]) do |f| %>

  <% if @skill.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@skill.errors.count, "error") %> prohibited this skill from being saved:</h2>

      <ul>
        <% @skill.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-sm-3">
      <div class="form-group">
        <%= f.text_field :name, class: 'form-control', placeholder: "name" %>
      </div>
    </div>


    <div class="col-sm-3">
      <div class="form-group">
        <!-- <%= f.select(:catagory, options_for_select([['soft skill', 'soft'], ['designing', 'design'], ['coding skill', 'coding']]), {:class=>"dropdown-menu"} ) %> -->
        <%= f.text_field :catagory, class: 'form-control', placeholder: "skill catagory soft_skills,design,coding" %>
      </div>
    </div>

    <div class="col-sm-3">
      <div class="form-group">
        <%= f.number_field :level, class: 'form-control', placeholder: " level of your skill", :min=>0, :max=>100 %>
      </div>
    </div>

    <div class="col-sm-3">
      <%= f.submit class: "btn btn-primary" %>
    </div>

<% end %>


